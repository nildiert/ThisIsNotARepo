<div class="flex flex-col items-center w-[300px] mx-auto gap-3">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "flex flex-col gap-4 w-full" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field flex flex-col justify-start">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border border-gray-300 rounded p-2" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="text-sm text-gray-500">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field flex flex-col justify-start">
      <%= f.label :password %>
      <i class="text-sm text-gray-500">(leave blank if you don't want to change it)</i>
      <% if @minimum_password_length %>
        <em class="text-sm text-gray-500"><%= @minimum_password_length %> characters minimum</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "border border-gray-300 rounded p-2" %>
    </div>

    <div class="field flex flex-col justify-start">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "border border-gray-300 rounded p-2" %>
    </div>

    <div class="field flex flex-col justify-start">
      <%= f.label :current_password %>
      <i class="text-sm text-gray-500">(we need your current password to confirm your changes)</i>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "border border-gray-300 rounded p-2" %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: "bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600" %>
    </div>
  <% end %>

  <h3 class="text-lg font-semibold">Cancel my account</h3>

  <div class="text-center">
    Unhappy?
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "bg-red-500 text-white py-2 px-4 rounded hover:bg-red-600" %>
  </div>

  <%= link_to "Back", :back, class: "text-blue-500 hover:underline" %>
</div>
