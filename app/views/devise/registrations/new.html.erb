<div class="flex flex-col items-center w-[300px] mx-auto gap-3">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "flex flex-col gap-4 w-full" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field flex flex-col justify-start">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border border-gray-300 rounded p-2" %>
    </div>

    <div class="field flex flex-col justify-start">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "border border-gray-300 rounded p-2" %>
    </div>

    <div class="field flex flex-col justify-start">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "border border-gray-300 rounded p-2" %>
    </div>

    <div class="actions btn mt-0!">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
