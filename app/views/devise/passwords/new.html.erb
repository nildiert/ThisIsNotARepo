<div class="flex flex-col items-center w-[300px] mx-auto gap-3">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "flex flex-col gap-4 w-full" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field flex flex-col justify-start">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border border-gray-300 rounded p-2" %>
    </div>

    <div class="actions btn mt-0!">
      <%= f.submit "Send me reset password instructions" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
